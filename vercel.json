{
  "version": 2,
  "functions": {
    "src/index.js": {
      "maxDuration": 20
    }
  },
  "builds": [
    {
      "src": "src/index.js",
      "use": "@vercel/node",
      "config": { "includeFiles": ["src/**", "config/**"] } 
    },
    {
      "src": "client/package.json",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/src/index.js"
    },
    {
      "src": "/\\.well-known/(.*)",
      "dest": "/src/index.js"
    },
    {
      "src": "/auth/(.*)",
      "dest": "/src/index.js"
    },
    {
      "src": "/_next/static/(.*)",
      "dest": "/client/_next/static/$1"
    },
    {
      "src": "/_next/image(.*)",
      "dest": "/client/_next/image$1"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/client/$1" 
    }
  ]
}
